block content
	//-p= JSON.stringify(contentful.artists)
	section#first-section.imagebg.parallax(data-overlay)
		//- .background-image-holder
		//- 	img(src="/img/bg/home-header2.jpg")
		<div class="videoBackground"><video playsinline autoplay muted loop poster=""><source src="https://player.vimeo.com/external/314026233.sd.mp4?s=0ffb36cef7885d2f1bf9b1b0fc48fa83b39b2f68&profile_id=165" type="video/mp4"></video></div>
		.container
			.row.text-center
				.col-sm-12
					img#big-logo(src="/img/logo/grizzlyfest_main_logo.png")

					div.social_media_icons_container
						ul.social_media_icons
							li.facebook
								a(href="https://www.facebook.com/grizzlyfest/" target="_blank")
									i.fa.fa-facebook
							li.instagram
								a(href="https://www.instagram.com/grizzly_fest/" target="_blank")
									i.fa.fa-instagram
							li.spotify
								a(href="https://open.spotify.com/playlist/6JpH5ZCIHuqYOJsgDdJ0VM?fbclid=IwAR0lz3hc86lWgaGcMeaaU1xaveHVaWpTxz1EvCtbc5v5sVRLIgW166wHgI0" target="_blank")
									i.fa.fa-spotify
							li.envelope
								a(href="https://open.spotify.com/playlist/6JpH5ZCIHuqYOJsgDdJ0VM?fbclid=IwAR0lz3hc86lWgaGcMeaaU1xaveHVaWpTxz1EvCtbc5v5sVRLIgW166wHgI0" target="_blank")
									i.fa.fa-envelope-o
					//- <a target="_blank" href="https://www.festivalticketing.com/cart/4E619283-F903-4A5F-8C59-028BAC65B534/tickets/2068" class="btn rouge angle"><span class="btn__text">Get Tickets</span></a>
			.row.text-center

	section.container.ticket-packages-container
		.row.text-center
			a(href="#announce-popup").col-xs-12.col-sm-6.col-md-6.current-ticket-promotion
				h1.amenities-block-title 2019 Announce Video

			#announce-popup.overlay
				.popup
					a(href="#")#close-announce.close &times;
					h1.video-title 2019 Announcement
					<iframe id="announce-video" src="https://player.vimeo.com/video/313943506?loop=1&title=0&byline=0&portrait=0" style="display:block;margin:0 auto;" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe><script src="https://player.vimeo.com/api/player.js"></script>

					//- pauses announce video in popup upon closing
					script.
						$("#close-announce").click(function (e) {
							var $frame = $('#announce-video');

							// saves the current iframe source
							var vidsrc = $frame.attr('src');

							// sets the source to nothing, stopping the video
							$frame.attr('src',''); 

							// sets it back to the correct link so that it reloads immediately on the next window open
							$frame.attr('src', vidsrc);
						});

			.col-xs-12.col-sm-6.col-md-6.see-all-ticket-packages
				h1	See All Ticket Packages
			
				a(href="/vipexperiences" target="_blank")
					button Tickets

	section.amenities.text-center
		.container
			.row.poster-row(style="padding-left:10px;padding-right:10px;")
				.col-sm-12.mt--1.poster-col(style="padding:5px;margin-bottom:10px;")
					//- img.poster(src="/img/bg/bg_poster2.png")
					//- a.btn.rouge.angle.poster-tickets-button(href="https://www.festivalticketing.com/cart/4E619283-F903-4A5F-8C59-028BAC65B534/tickets/2068")
					//- 	.btn__text.color-maroon Tickets
					a.btn.rouge.angle.poster-tickets-button#myBtn(style="width:200px;border:0.5px solid black;")
						.btn__text.color-maroon See Full Schedule

					#myModal.modal
						.modal-content
							span#close.close &times;
							img(src="/img/schedule2.png", alt="schedule")
			.row.top-row-amenities.artists.maps
				.col-xs-12.col-sm-7.col-md-7.venue-map
				.col-xs-12.col-sm-5.col-md-5.parking-map
			.row.top-row-amenities
				a(href="/artists").col-xs-12.col-sm-6.col-md-6.artists
					h1.amenities-block-title Artists
				.col-xs-12.col-sm-6.col-md-6.music-player
					<iframe src="https://open.spotify.com/embed/user/grizzlyfest/playlist/6JpH5ZCIHuqYOJsgDdJ0VM" width="100%" height="100%" frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe>
			.row.bottom-row-amenities
				a(href="https://www.instagram.com/grizzly_fest/" target="_blank").col-xs-12.col-sm-4.col-md-4.food-drink
					h1.amenities-block-title Instagram
				a(href="/vipExperiences").col-xs-12.col-sm-4.col-md-4.vip-exp
					h1.amenities-block-title Vip Experiences
				a(href="#highlights-popup").col-xs-12.col-sm-4.col-md-4.shop-block
					h1.amenities-block-title 2018 Highlights

			#highlights-popup.overlay
				.popup
					a(href="#")#close-highlights.close &times;
					h1.video-title 2018 Highlights
					<iframe id="highlights-video" src="https://player.vimeo.com/video/313948500?loop=1&color=03c9ae&title=0&byline=0&portrait=0" style="display:block;margin:0 auto;" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe><script src="https://player.vimeo.com/api/player.js"></script>

					//- pauses highlights video in popup upon closing
					script.
						$("#close-highlights").click(function (e) {
							var $frame = $('#highlights-video');

							// saves the current iframe source
							var vidsrc = $frame.attr('src');

							// sets the source to nothing, stopping the video
							$frame.attr('src',''); 

							// sets it back to the correct link so that it reloads immediately on the next window open
							$frame.attr('src', vidsrc);
						});

						// Get the modal
						var modal = document.getElementById('myModal');

						// Get the button that opens the modal
						var btn = document.getElementById("myBtn");

						// Get the <span> element that closes the modal
						var span = document.getElementById("close");

						// When the user clicks on the button, open the modal 
						btn.onclick = function() {
							modal.style.display = "block";
						}

						// When the user clicks on <span> (x), close the modal
						span.onclick = function() {
							modal.style.display = "none";
						}

						// When the user clicks anywhere outside of the modal, close it
						window.onclick = function(event) {
							if (event.target == modal) {
								modal.style.display = "none";
							}
						}
