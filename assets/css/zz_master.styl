		height 80px
		position fixed
		background $bluet5
		a.logo
			height 70px
			.logo
				height 70px
		nav
			#mega-menu
				ul.menu-horizontal
					&>li
						@media(min-width:992px)
							line-height 40px
							&.dropdown
								top -2px

					&>li > a, &>li > span.dropdown__trigger
						@media(min-width:992px)
							line-height 80px
						.dropdown:not(.dropdown--active)
							.dropdown__container
								top 80px

	// div
	// 	position relative
	// 	height 100%
	a.logo
		height 100px
		position absolute
		z-index 5
		top 0
		bottom 0
		margin auto
		.logo
			height 100px


	.nav-container
		height 100%

	nav
		#mega-menu
			position relative
			//top 20px
			a, span.dropdown__trigger
				text-decoration none
				text-transform uppercase
				opacity 1
				color $white
				transition .2s
				font-size 16px
				line-height inherit
				font-weight 600
				&:hover
					// color $blue
					transition .2s
			h1,h2,h3,h4,h5,h6,p
				a
					color $blue
			ul.menu-horizontal
				position relative
				//top 10px
				&>li
					line-height 120px
					display inline-block
					&.header-btn
						margin-right 0px
						margin-left 15px
					h6
						font-size 16px
					@media (max-width:992px)
						line-height 25px
						&.header-btn
							margin-top 20px
				a.btn
					padding 0 20px
			ul.menu-vertical
				display block
				li
					display block
					opacity 1
					margin 0
					&:not(:first-child)
						a
							padding 10px 10px 10px 10px
					&:first-child
						a
							padding 20px 10px 10px 10px
					&:last-child
						a
							padding 10px 10px 20px 10px
					&:hover
						background $blue
			.dropdown
				@media (max-width:992px)
					line-height 25px
					.dropdown__content
						float none !important
						li
							a
								display block
							&:not(:last-child)
								a
									border-bottom solid $blue 1px
				.dropdown__content
					background $bluet5
					float left
					position relative
					width auto
					padding 0
						





