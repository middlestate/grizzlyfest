.masonry__item.angle
	img
		padding 0px
.artist.angle:nth-child(odd), .masonry__item.angle:nth-child(odd)
	img.artist-photo, & > a:before, img
		imgAnglesOdd()
		transition 0.5s
	&:hover
		img.artist-photo, & > a:before, img.blog-photo
			clip-path: polygon(0 0, calc(100% - 35px) 0, 100% 100%, 35px 100%);
			transition 0.5s
			@media(max-width:992px)
				clip-path: polygon(0 0, calc(100% - 15px) 0, 100% 100%, 15px 100%);
			@media(max-width:767px)
				clip-path: polygon(0 0, calc(100% - 5px) 0, 100% 100%, 5px 100%);

.artist.angle:nth-child(even), .masonry__item.angle:nth-child(even)
	img.artist-photo, & > a:before, img
		imgAnglesEven()
		transition 0.5s
	&:hover
		img.artist-photo, & > a:before, img.blog-photo
			clip-path: polygon(35px 0, 100% 0, calc(100% - 35px) 100%, 0 100%);
			@media(max-width:992px)
				clip-path: polygon(15px 0, 100% 0, calc(100% - 15px) 100%, 0 100%);
			@media(max-width:767px)
				clip-path: polygon(5px 0, 100% 0, calc(100% - 5px) 100%, 0 100%);
