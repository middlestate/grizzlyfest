header
	height $headerHeight
	position absolute
	z-index 10
	width 100%
	.hamburger-toggle
		display block
		position relative
		height 25px
		width 22px
		top 17px
		right 10px
		margin-left 22px
		float right
	.hamburg
		position relative
		top 12px
	.hamburg span, .hamburg span:before, .hamburg span:after
		//top 10px
		cursor pointer
		border-radius 1px
		height 2px
		width 22px
		background white
		position relative
		display block
		content ''

	.hamburg span:before
		top -8px
	.hamburg span:after
		bottom -6px
