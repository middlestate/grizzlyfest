@import 'zx_settings'

// normalize-css()
// base()


body
	.content,footer
		position relative
	.content,header,footer
		right 0
		transition 0.5s
	&.custom-toggled-class
		.content,header,footer
			right 80vw
			transition 0.5s
	.content
		section.hero
			min-height 300px

p,a,li,span,h1,h2,h3,h4,h5,h6,input,textarea
	font-family $defaultFont
h1,h2,h3,h4,h5,h6,p,span
	margin-bottom 25px
h2
	font-family $shen
	font-size 62px
	line-height 78px
	font-weight 900
	color $white
	@media(max-width:992px)
		font-size 55px
	@media(max-width:767px)
		font-size 45px
		line-height 55px
h3
	font-size 50px
	line-height 62px
	font-weight 900
h4
	font-size 42px
	line-height 56px
	font-weight 900
h5
	font-size 32px
	line-height 46px
	font-weight 900
p, .md ul li
	font-size 18px
.md
	ul
		padding-left 22px
		li
			list-style-type disc
			margin 15px 0
	p
		line-height 28px
		strong
			color inherit
			font-weight 700
			text-decoration underline
.subHeadRow:not(:first-child)
	margin-top 60px
.footer
	h1,h2,h3,h4,h5,h6,p,span
		&>a
			color inherit !important
			font-weight inherit
			font-size inherit
			font-family inherit

.imagebg
	.background-image-holder
		background-position center center
.bg-pink
	background-color $pink
.bg-blue
	background-color $blue
	&.bg-t5
		background-color $bluet5
.bg-maroon
	background-color $maroon
.bg-purple
	background-color $purple
.bg-ct > .background-image-holder
	background-position center top
.bg-cb > .background-image-holder
	background-position center bottom
.bg-cc > .background-image-holder
	background-position center center
	
.color-pink
	color $pink
.color-blue
	color $blue
.color-maroon
	color $maroon
.color-purple
	color $purple
.color-lightblue
	color $lightblue
.color-white
	color $white

.btn
	border none
	border-radius 0px
	&.maroon
		background-color $maroon
	&.blue
		background-color $blue
	&.lightblue
		background-color $lightblue
	&.pink
		background-color $pink
	&.purple
		background-color $purple
	&.white
		background-color $white
	.btn__text
		font-weight 600
		font-size 18px
		text-transform uppercase

[data-overlay]
	&::before
		opacity 0.5
	&.heavy::before
		opacity 0.9
	&.pink::before
		background $pink
	&.blue::before
		background $blue
	&.lightblue::before
		background $lightblue
	&.maroon::before
		background $maroon
	&.purple::before
		background $purple
	&.black::before
		background $black
	&.white::before
		background $white
	.container
		z-index 1

.fa-soundcloud
	&:hover
		color #FF4603
.fa-facebook
	&:hover
		color #3A589E
.fa-instagram
	&:hover
		background linear-gradient(0deg, #F57A2D 0%, #D62F80 50%, #5858CA 90%)
		color #D62F80
		-webkit-background-clip text
		-webkit-text-fill-color transparent
.fa-twitter
	&:hover
		color #1DA1F2
.fa-spotify
	&:hover
		color #1ED760
.fa-link
	&:hover
		color #a8a8a8




// --- countdown timer
#countdown-timer
