		margin-top -100px
		padding 100px 0
		&.footer
			padding 100px 0 50px 0
	@media (max-width:767px)
		clip-path: polygon(0 0, 100% 50px, 100% 100%, 0 100%);
		margin-top -50px
		padding 75px 0
		&.footer
			padding 50px 0 25px 0
