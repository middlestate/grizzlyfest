// -- angle classes
#first-section
	padding-bottom 200px
	@media(max-width:992px)
		padding-bottom -100px
	@media(max-width:767px)
		padding-bottom -50px
.angle:not(.btn):not(img):not(.artist)
	clip-path: polygon(0 0, 100% 200px, 100% 100%, 0 100%);
	margin-top -200px
	padding 200px 0
	z-index 2
	position relative
	&.footer
		margin-top -200px
		padding 200px 0 50px 0
		@media(max-width:992px)
			margin-top -100px
		@media(max-width:767px)
			margin-top -50px
	@media (max-width 992px)
		clip-path: polygon(0 0, 100% 100px, 100% 100%, 0 100%);
		margin-top -100px
		padding 100px 0
		&.footer
			padding 100px 0 50px 0
	@media (max-width:767px)
		clip-path: polygon(0 0, 100% 50px, 100% 100%, 0 100%);
		margin-top -50px
		padding 75px 0
		&.footer
			padding 50px 0 25px 0
//body:not(.index)
// 	.footer.angle
// 		margin-top 0
a.btn.angle
	clip-path: polygon(0 0, calc(100% - 10px) 0, 100% 100%, 10px 100%);
	&:hover
		clip-path: polygon(10px 0, 100% 0, calc(100% - 10px) 100%, 0 100%);
#map.angle
	padding 0

img.angle
	clip-path: polygon(0 0, calc(100% - 100px) 0, 100% 100%, 100px 100%);
	padding 0 !important
	@media(max-width:992px)
		clip-path: polygon(0 0, calc(100% - 25px) 0, 100% 100%, 25px 100%);
	@media(max-width:767px)
		clip-path: polygon(0 0, calc(100% - 10px) 0, 100% 100%, 10px 100%);
.artist.angle:nth-child(odd) img.artist-photo, .artist.angle:nth-child(odd) > a:before
	clip-path: polygon(0 0, calc(100% - 100px) 0, 100% 100%, 50px 100%);
	@media(max-width:992px)
		clip-path: polygon(0 0, calc(100% - 25px) 0, 100% 100%, 25px 100%);
	@media(max-width:767px)
		clip-path: polygon(0 0, calc(100% - 10px) 0, 100% 100%, 10px 100%);
.artist.angle:nth-child(even) img.artist-photo, .artist.angle:nth-child(even) > a:before
	clip-path: polygon(50px 0, 100% 0, calc(100% - 50px) 100%, 0 100%);
	@media(max-width:992px)
		clip-path: polygon(25px 0, 100% 0, calc(100% - 25px) 100%, 0 100%);
	@media(max-width:767px)
		clip-path: polygon(10px 0, 100% 0, calc(100% - 10px) 100%, 0 100%);


// --- misc
.map-container
	min-height 500px
#big-logo
	max-width 75%
.pos-vertical-center
	@media(max-width:992px)
		top auto
		transform none
		-webkit-transform none
	@media(max-height:900px)
		top auto
		transform none
		-webkit-transform none
[class*="height-"]:not(.artist-hero):not(.map-container)
	@media(max-width:992px)
		height auto
	@media(max-height:900px)
		height auto
.separator
	height 50px
	width 100%
	background-size contain
	background-image url('/img/icon/paw-white.png')
	background-repeat no-repeat
	background-position center center
	margin-bottom 25px
.x-pad
	padding-top 25px
	padding-bottom 25px
.shift-up
	position relative
	top -200px
	margin-bottom -200px
	z-index 2
	@media(max-width:992px)
		top -100px
		margin-bottom -100px
	@media(max-width:767px)
		top -50px
		margin-bottom -50px
section
	&.shift-up
		padding-top 0



// --- artists bio page
.artist-hero
	.background-image-holder
		filter blur(10px)
.artist-social
	li
		display inline-block
		margin 0 10px
		a
			display block
			i
				font-size 35px
				color $textDefault



//--- artists section
#artists
	.artist
		&>a
			position relative
			text-decoration none
			display block
			&:before
				transition 0.5s
				content ''
				background linear-gradient(0deg, rgba(84, 48, 72,0.9) 0%, rgba(84, 48, 72,0.0) 50%)
				height 100%
				width 100%
				position absolute
				top 0
				left 0
				z-index 3
				opacity 0
		img.artist-photo
			margin-bottom 0
			position relative
			z-index 2
		.artist-name
			//position absolute
			left 0
			right 0
			color $white
			//background-color $blue
			display block
			padding 10px 5px 5px 5px
			font-size 30px
			font-weight 600
			letter-spacing 2px
			z-index 4
			transition 0.5s
			margin-bottom 0
			line-height 30px
			@media (min-width:992px)
				bottom -45px
				position absolute
			@media (max-width:767px)
				font-size 24px
				
		.social-media
			li
				display inline-block
				margin 0 10px
				position relative
				z-index 1
				@media (max-width:767px)
					margin 0 7px
				a
					display block
					i
						font-size 30px
						@media (max-width:992px)
							font-size 25px
						@media (max-width:767px)
							font-size 16px
			@media (min-width:992px)
				for i in  1 2 3 4 5 6
					li:nth-child({i})
						top -90px - ((i*10)/2)
						transition 0.5s + (i/10)
			
		&:hover
			@media (min-width:992px)
				&>a
					&:before
						transition 0.5s
						opacity 1
				.artist-name
					bottom 5px
				.social-media li
					top 10px





// --- header
.fa-times-thin:before
	content '\00d7'
.closeX
	color $white
	position absolute
	top 8px
	right 25px
	font-size 40px
	cursor pointer
body.index
	header:not(.sticky)
		img.logo
			display none
#menu-overlay-toggle
	display none
	height 100%
	width 100%
	position fixed
	z-index 9
	background rgba(0,0,0,0.5)
	transition 0.5s
	&.custom-toggled-class
		z-index 0
		//display none
		background rgba(0,0,0,0.0)
		transition 0.5s
.dropdown__content
	border-radius 0 !important
	//box-shadow none !important
	li
		padding 10px 20px
	a
		padding 10px 20px
#menu1
	width auto
	float none !important
