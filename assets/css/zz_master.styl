//--- artists section
#artists
	.artist
		&>a
			position relative
			text-decoration none
			display block
			&:before
				transition 0.5s
				content ''
				background linear-gradient(0deg, rgba(84, 48, 72,0.9) 0%, rgba(84, 48, 72,0.0) 50%)
				height 100%
				width 100%
				position absolute
				top 0
				left 0
				z-index 3
				opacity 0
		img.artist-photo
			margin-bottom 0
			position relative
			z-index 2
		.artist-name
			//position absolute
			left 0
			right 0
			color $white
			//background-color $blue
			display block
			padding 10px 5px 5px 5px
			font-size 30px
			font-weight 600
			letter-spacing 2px
			z-index 4
			transition 0.5s
			margin-bottom 0
			line-height 30px
			@media (min-width:992px)
				bottom -45px
				position absolute
			@media (max-width:767px)
				font-size 24px

		.social-media
			li
				display inline-block
				margin 0 10px
				position relative
				z-index 1
				@media (max-width:767px)
					margin 0 7px
				a
					display block
					i
						font-size 30px
						@media (max-width:992px)
							font-size 25px
						@media (max-width:767px)
							font-size 16px
			@media (min-width:992px)
				for i in  1 2 3 4 5 6
					li:nth-child({i})
						top -90px - ((i*10)/2)
						transition 0.5s + (i/10)

		&:hover
			@media (min-width:992px)
				&>a
					&:before
						transition 0.5s
						opacity 1
				.artist-name
					bottom 5px
				.social-media li
					top 10px



